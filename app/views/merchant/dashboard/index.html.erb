<h2><%= @merchant.name %></h2>
<nav class="navbar">
  <%= link_to 'My Items', merchant_items_path(@merchant) %>
  <%= link_to 'My Invoices', merchant_invoices_path(@merchant) %>
</nav>

<section class="items-to-ship">
<h2>Items Ready to Ship</h2>
<% @items_ready_to_ship.each do |invoice_item| %>
  <%= invoice_item.item.name %> -
  <%= link_to "Invoice ##{invoice_item.invoice_id}", merchant_invoice_path(@merchant, invoice_item.invoice) %> -
  <%= invoice_item.invoice.format_time %><br>
</section>
<% end %>

<section class="top_five_customers">
<h3>Top Customers</h3>
<ol>
<% @merchant.top_five_customers.each do |customer| %>
<div id="top_customers-<%=customer.id%>">
  <li><%= customer.full_name %>: Successful Transactions: <%= customer.transaction_count %></li><br>
</div>
<% end %>
</ol>
</section>
