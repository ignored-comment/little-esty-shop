<h1>New Item</h1>

<%= form_with(model: Item.new, url: merchant_items_path(params[:merchant_id]), method: :post, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name%>

  <%= form.label :description %>
  <%= form.text_field :description%>

  <%= form.label :unit_price %>
  <%= form.number_field :unit_price%>

  <%= form.submit %>
<% end %>
